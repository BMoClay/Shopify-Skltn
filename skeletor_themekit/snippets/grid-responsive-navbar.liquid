<!-- grid-responsive-navbar.liquid -->


  <ul class="topnav desktop-nav small--hide" id="myTopnav-desktop">
    {% for link in linklists[section.settings.main_linklist].links %}
    {%- assign child_list_handle = link.title | handleize -%}
    {% if menus[child_list_handle].links != blank %}
    <li  class="dropdown site-nav--has-submenu{% if link.active %} site-nav--active{% endif %}">
      <a href="{{ link.url }}" class="site-nav__link dropbtn">
        {{ link.title }}
        {% include 'icon-arrow-down' %}
      </a>
      <ul class="site-nav__submenu dropdown-content">
        {% for childlink in menus[child_list_handle].links %}
        {%- if link.title != 'Shop' -%}
        <li {% if childlink.active %}class="site-nav--active"{% endif %}>
          <a href="{{ childlink.url }}" class="site-nav__link">{{ childlink.url | escape }}</a>
        </li>
          {%- else -%}
          <li {% if childlink.active %}class="site-nav--active"{% endif %}>
            <a href="{{ childlink.url | replace: 'collections/', 'collections/all#' }}" class="site-nav__link">{{ childlink.title }}</a>
          </li>
        {%- endif -%}
        {% endfor %}
      </ul>
    </li>
    {% else %}
    <li {% if link.active %}class="site-nav--active"{% endif %}>
      <a href="{{ link.url }}" class="site-nav__link">{{ link.title }}</a>
    </li>
    {% endif %}
    {% endfor %}


  </ul>

<div class="header-cp-container small--hide">{% include "header-cp-nav" %}  </div>




 <a id="menu-icon" href="javascript:void(0);" class="icon menu-icon small--show medium-up--hide" onclick="hamburgerToggle()">
   <div class="bar1"></div>
   <div class="bar2"></div>
   <div class="bar3"></div>
 </a>





<script>
  function hamburgerToggle() {
    var x = document.getElementById("myTopnav-mobile");
    var y = document.getElementById("menu-icon");

    if (x.className === "topnav mobile-nav responsive small--show medium-up--hide") {

      console.log("it does");
      x.className += " open";
      y.classList.toggle("change");
    } else {
      console.log('it does not');
      x.classList.remove('open')
      y.classList.toggle("change");
    }
  }
</script>
