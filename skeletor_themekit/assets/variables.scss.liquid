$size-medium: 750px;
$size-large: 990px;
$size-widescreen: 1500px;
$max-width: $size-widescreen;
$small: 'small';
$medium: 'medium';
$medium-down: 'medium-down';
$medium-up: 'medium-up';
$large: 'large';
$large-down: 'large-down';
$large-up: 'large-up';
$widescreen: 'widescreen';
$breakpoint-has-widths: ($small, $medium-up);
// The `$breakpoints` list is used to build our media queries.
$breakpoints: (
  $small '(max-width: #{$size-medium - 1})',
  $medium '(min-width: #{$size-medium}) and (max-width: #{$size-large - 1})',
  $medium-down '(max-width: #{$size-large - 1})',
  $medium-up '(min-width: #{$size-medium})',
  $large '(min-width: #{$size-large}) and (max-width: #{$size-widescreen - 1})',
  $large-down '(max-width: #{$size-widescreen - 1})',
  $large-up '(min-width: #{$size-large})',
  $widescreen '(min-width: #{$size-widescreen})'
);
$breakpoint-has-widths: ('small', 'medium', 'medium-down', 'medium-up', 'large-down', 'large-up', 'large', 'widescreen');




